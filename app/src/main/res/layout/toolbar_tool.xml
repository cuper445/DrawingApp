<!-- tool_shape_fragment.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".ToolbarToolFragment">

    <Button
        android:id="@+id/btnPen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pen" />

    <!--        called whiteout since it behaves more like whiteout than an eraser-->

    <Button
        android:id="@+id/btnEraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whiteout" />

    <Button
        android:id="@+id/btnPaintbrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paintbrush" />

</LinearLayout>
